<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="161dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/telephone"
            android:fontFamily="@font/montserrat"
            android:onClick="bukaTelepon"
            android:text="     0822-9999-6281"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#b2bec3"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/email"
            android:fontFamily="@font/montserrat"
            android:onClick="bukaEmail"
            android:text="     info@rootpixel.net"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#b2bec3"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/facebook"
            android:fontFamily="@font/montserrat"
            android:onClick="bukaFb"
            android:text="     Rootpixel ID"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#b2bec3"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/instagram"
            android:fontFamily="@font/montserrat"
            android:onClick="bukaIg"
            android:text="     rootpixel"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#b2bec3"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/internet"
            android:fontFamily="@font/montserrat"
            android:onClick="bukaInternet"
            android:text="     rootpixel.net"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#b2bec3"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="140dp"
            android:text="Powered by Rootpixel"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>