<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_lay1t"
    android:layout_margin="10dp"
    android:layout_marginTop="30dp"
    android:layout_height="500dp"
    android:layout_width="360dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tom_tom.pixelstory.FrameText.Lay1T"
    android:layout_gravity="center"
    tools:showIn="@layout/activity_lay1t">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:weightSum="100"
        android:background="@color/white">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_add_black_24dp"
                android:id="@+id/img1at" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="match_parent"
            android:layout_weight="75">

            <TextView
                android:id="@+id/textjudul1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="Your Title"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="18dp">

            </TextView>

            <TextView
                android:id="@+id/textcerita1"
                android:layout_marginTop="10dp"
                android:text="Begin writing your story here"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@android:color/transparent" >
            </TextView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
